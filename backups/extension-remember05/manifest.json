{
  "manifest_version": 3,
  "name": "Content Extractor",
  "version": "1.0",
  "description": "Extracts page content and summarizes it, with a Vis.js timeline.",

  "permissions": [
    "activeTab",
    "scripting",
    "languageModel" 
  ],

  "host_permissions": [
    "<all_urls>"
  ],

  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "images/icon16.png",
      "32": "images/icon32.png",
      "48": "images/icon48.png",
      "128": "images/icon128.png"
    }
  },

  "icons": {
    "16": "images/icon16.png",
    "32": "images/icon32.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },

  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self';"
  },

  "web_accessible_resources": [
    {
      "resources": [
        "vis-timeline.min.js",
        "vis-timeline.min.css",
        "mySidePanel.js"
      ],
      "matches": ["<all_urls>"]
    }
  ]
}